<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <stroke
                    android:width="2dp"
                    android:color="@color/accent" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                    android:width="1dp"
                    android:color="@color/dsv_controller_disabled" />
            <solid android:color="@color/dsv_controller_background_disabled" />
        </shape>
    </item>
</selector>